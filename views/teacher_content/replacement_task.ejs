<!DOCTYPE html>
<html lang="en">
    <%- include('../layout/head.ejs') %>.
    <body class="sb-nav-fixed">
        <%- include('../layout/topbar.ejs') %>.
        <div id="layoutSidenav">
            <%- include('sidenav_admin.ejs') %>.
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid">
                       
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item active">Replacement Task</li>
                        </ol>
                         
                        <div class="card mb-4">
                            <div class="card-header"><i class="fas fa-table mr-1"></i>Today's Replacement</div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="text-align: center;">
                                        <thead>
                                            <tr>
                                                <th width="20%">Subject</th>
                                                <th width="20%">classroom</th>
                                                <th width="20%">timeslot</th>
                                                <th width="20%">session</th>
                                                <th width="20%">day</th>
                                                <th width="20%">Original Teacher</th>
                                               
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% timetable.forEach(function (timetable) { %>
                                            <tr>
                                                <td><%= timetable.subject  %></td>
                                                <td><%= timetable.classroom  %></td>
                                                <td><%= timetable.timeslot %></td>
                                                <td><%= timetable.session %></td>
                                                <td><%= timetable.day %></td>  
                                                <td><%= timetable.teacher %></td>                                       
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                
                    </div>
                </main>
                <%- include('../layout/footer.ejs') %>.
            </div>
        </div>
                <%- include('../layout/js.ejs') %>.
    </body>
</html>