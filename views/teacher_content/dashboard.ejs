<main>
    <div class="container-fluid">
        <h1 class="mt-4">Dashboard</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Dashboard</li>
        </ol>
        <div class="row">
            <div class="col-xl-3 col-md-6">
                <div class="card bg-primary text-white mb-4">
                    <div class="card-body">Check In</div>
                    <div class="card-footer d-flex align-items-center justify-content-between">
                        <form action="/attendanceTcer" method="POST">
                            <input type="submit" value="Click here" a class="btn btn-primary btn-block" href="#">         
                        </form>
                        <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                    </div>
                </div>
            </div>
        
        </div>
        <div class="card mb-4">
            <div class="card-header"><i class="fas fa-table mr-1"></i>List of Attendance</div>
            <div class="card-body">
                <div class="table-responsive">
                    
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="text-align: center;">
                        <thead>
                            <tr>
                                <th width="20%">Check in</th>
                                <th width="20%">Check out</th>
                                <th width="20%">Reason (Optional)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(function (user) { %>
                            <tr>
                                <td><%= user.entry %></td>
                                <td><%= user.exit.time %></td>
                                <td><%= user.exit.reason %></td>                                            
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</main>