<main>
    <div class="container-fluid">
        <h1 class="mt-4">Welcome to RTAS <%= user.name %></h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Dashboard</li>
        </ol>
         
                
        <div class="row">
            <div class="col-xl-3 col-md-6">
                <h5 class="mb-3">Please Clock In Before 8.00 AM</h5>
                <div class="card bg-primary text-white mb-4">
                    <div class="card-body">Check In</div>
                    <form action="/attendance" method="POST">
                        <input type="submit" name="btnCheckIn" value="Click here" style="opacity: 50%;" a class="btn btn-primary btn-block" href="#">         
                    </form>
                </div>
            </div>
            <div class="col-xl-3 col-md-6">
                <h5 class="mb-3">Please Clock Out Before 5.00 PM</h5>
                <div class="card bg-danger text-white mb-4">
                    <div class="card-body">Check Out</div>
                    <form action="/attendanceCheckOut" method="POST">
                        <input type="submit" value="Click Here" style="opacity: 50%;" a class="btn btn-danger btn-block" href="#">         
                    </form>
                </div>
            </div>
        </div>
        <div class="card mb-4">
            <div class="card-header"><i class="fas fa-table mr-1"></i>Personal Attendance Record</div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="text-align: center;">
                        <thead>
                            <tr>
                                <th width="20%">Date</th>
                                <th width="20%">Check in</th>
                                <th width="20%">Check out</th>
                                <th width="20%">Reason (Optional)</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach(function (user) { %>
                            <tr>
                                <td><%= user.dateEntry %></td>
                                <td><%= user.entry %></td>
                                <td><%= user.exit.time %></td>
                                <td><%= user.reason %></td>                                            
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</main>