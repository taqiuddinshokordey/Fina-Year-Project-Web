        <div id="layoutSidenav">
            <%- include('sidenav_admin.ejs') %>.
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid">
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item active">List of Today Absentee</li>
                        </ol>
                        <div class="card mb-4">
                            <div class="card-header"><i class="fas fa-table mr-1"></i>Timetable By Class</div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                                <th>Class</th>
                                                <th>Session</th>
                                                <th>TimeSlot</th>
                                                <th>Assign Replacement Teacher</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% timetable.forEach(function (timetable) { %>
                                            <tr>
                                                <td><%= timetable.classroom.classroom_name %></td>
                                                <td><%= timetable.session %></td>
                                                <td><%= timetable.timeslot %></td>
                                                <td><a class="button" href="/today_absentee/view/<%= timetable._id%>"</a>Replace&nbsp;</td>
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                        
                                    </table>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </main>
                <%- include('../layout/footer.ejs') %>.
            </div>
        </div>
