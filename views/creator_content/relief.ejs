<!DOCTYPE html>
<html lang="en">
    <%- include('../layout/head.ejs') %>.
    <body class="sb-nav-fixed">
        <%- include('../layout/topbar.ejs') %>.
        <div id="layoutSidenav">
            <%- include('sidenav_admin.ejs') %>.
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid">
                       
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item active">Replacement Management</li>
                        </ol>
                         
                        <div class="card mb-4">
                            <div class="card-header"><i class="fas fa-table mr-1"></i>Today Teacher's Absentee</div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="text-align: center;">
                                        <thead>
                                            <tr>
                                                <th width="20%">Teacher's Name</th>
                                                
                                                <th width="20%">Detail</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% teacher.forEach(function (teacher) { %>
                                            <tr>
                                                <td><%= teacher.name %></td>
                                                <td><a class="button" href="/today_absentee/<%= teacher._id%>"</a>View Teacher Timetable&nbsp;</td>                                         
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-4">
                            <div class="card-header"><i class="fas fa-table mr-1"></i>Today Replacement Teacher</div>
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="text-align: center;">
                                        <thead>
                                            <tr>
                                                <th width="20%">Teacher's Name</th>
                                                <th width="20%">Classroom</th>
                                                <th width="20%">Timeslot</th>
                                                <th width="20%">Session</th>
                                                <th width="20%">Subject</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% replacement.forEach(function (replacement) { %>
                                            <tr>
                                                <td><%= replacement.replacement.name %></td>
                                                <td><%= replacement.classroom.classroom_name %></td> 
                                                <td><%= replacement.timeslot %></td>   
                                                <td><%= replacement.session %></td>     
                                                <td><%= replacement.subject%></td>                                         
                                            </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                
                    </div>
                </main>
                <%- include('../layout/footer.ejs') %>.
            </div>
        </div>
                <%- include('../layout/js.ejs') %>.
    </body>
</html>